<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap" rel="stylesheet">
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const ctx = document.getElementById('statsChart').getContext('2d');
    const statsChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri'],
        datasets: [{
          label: 'Completed Tasks',
          data: [3, 7, 4, 5, 6],
          backgroundColor: '#7C3AED',
          borderRadius: 5
        }]
      },
      options: {
        responsive: true,
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });
  });
</script>

<div class ="dashboard-page">
  <div class="container font-main">
    <h1 class="font-main">History</h1>

    <div class="top-section">
      <div class="statistics-card">
        <div class="statistics-box">
          <h2>Statistics</h2>
          <div class="graph-placeholder">
            <canvas id="statsChart" width="400" height="200"></canvas>
          </div>
          <button class="btn">Advanced Statistics</button>
        </div>
      </div>

      <div class="task-form">
        <label for="time">Assigned time (min.):</label>
        <input type="text" id="time" value="25" />

        <p>Time distribution:</p>
        <ul>
          <li>Evenly</li>
          <li>Incremental</li>
          <li>Decremental</li>
          <li>Random</li>
        </ul>

        <button class="btn">Create a New Task</button>
      </div>
    </div>

    <div class="recent-tasks mt-3 overflow-auto" style="max-height: 200px;">
      <h3>Recent Tasks</h3>
      <ul class="task-list">
        <li>-</li>
        <li>-</li>
        <li>-</li>
        <li>-</li>
        <li>-</li>
        <li>-</li>
        <li>-</li>
        <li>-</li>
        <li>-</li>
        <li>-</li>
      </ul>
    </div>
  </div>
</div>
