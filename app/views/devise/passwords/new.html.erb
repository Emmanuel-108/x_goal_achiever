<div class="login-page">
  <div class="login-container">
    <h1 class="form-text">Forgot Password</h1>


    <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), html: { class: "login-form" }) do |form| %>

      <% if resource.errors.any? %>
        <div class="errors">
          <h2>Erreur :</h2>
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :email, "Email Address", class:"form-text" %>
        <%= form.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group text-center">
        <%= form.submit "Send Instructions", class: "btn" %>
      </div>

      <div class="form-links">
        <%= link_to "Sign In", new_session_path(resource_name), class: "orange-link" %><br />
        <%= link_to "Create an Account", new_registration_path(resource_name), class: "orange-link" %>
      </div>

    <% end %>
  </div>
</div>
