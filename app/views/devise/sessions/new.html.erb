<%# <link href="https://fonts.googleapis.com/css2?family=Jersey+25&family=Press+Start+2P&display=swap" rel="stylesheet"> %>
<div class="login-page">
  <div class="login-container body">
    <h1 class="body form-text">Sign In to Your Account</h1>

    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |form| %>

      <% if resource.errors.any? %>
        <div class="errors">
          <h2>Login Error :</h2>
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :email, "Email Address", class:"form-text" %>
        <%= form.email_field :email, autofocus: true, class: "form-control borderedform" %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Password", class:"form-text" %>
        <%= form.password_field :password, autocomplete: "current-password", class: "form-control borderedform" %>
      </div>

      <div class="form-group text-center">
        <%= form.submit "Sign In", class: "btn body" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="remember-link">
          <label><%= form.check_box :remember_me %> Remember Me</label>
        </div>
      <% end %>

      <div class="form-links">
        <%= link_to " Forgot Password?", new_password_path(resource_name), class: "orange-link" %><br />
        <%= link_to "Create an Account", new_registration_path(resource_name), class: "orange-link" %>
      </div>

    <% end %>
  </div>
</div>
