<div class="login-page">
  <div class="login-container">
    <h1>Create an Account</h1>

    <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), html: { class: "login-form" }) do |form| %>

      <% if resource.errors.any? %>
        <div class="errors">
          <h2>Sign Up Error :</h2>
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :first_name, "First Name", class:"form-text" %><br />
        <%= form.text_field :first_name, autofocus: true, class: "form-control borderedform" %>
      </div>

      <div class="form-group">
        <%= form.label :last_name, "Last Name", class:"form-text" %><br />
        <%= form.text_field :last_name, class: "form-control borderedform" %>
      </div>

      <div class="form-group">
        <%= form.label :email, "Email", class:"form-text" %><br />
        <%= form.email_field :email, class: "form-control borderedform" %>
      </div>

      <div class="form-group">
        <%= form.label :date_of_birth, "Date of Birth", class:"form-text" %><br />
        <%= form.datetime_field :date_of_birth, class: "form-control borderedform" %>
      </div>

      <div class="form-group">
        <%= form.label :gender, "Gender", class:"form-text" %><br />
        <%= form.text_field :gender, class: "form-control borderedform" %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Password", class:"form-text" %><br />
        <%= form.password_field :password, autocomplete: "new-password", class: "form-control borderedform" %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "Password Confirmation", class:"form-text" %><br />
        <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control borderedform" %>
      </div>

      <div class="form-group text-center">
        <%= form.submit "Create My Account", class: "btn" %>
      </div>

      <div class="form-links ">
        <%= link_to "Sign In", new_session_path(resource_name), class: "orange-link" %>
      </div>

    <% end %>
  </div>
</div>
