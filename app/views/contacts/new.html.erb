<%# link href="https://fonts.googleapis.com/css2?family=Jersey+25&family=Press+Start+2P&display=swap" rel="stylesheet" %>

<div class="container contact-wrapper">
  <div class="row">

    <div class="col-md-6 contact-form">
      <h1 class="contact-form-title">Contact us</h1>

      <%= form_with(model: @contact, html: { class: "login-form" }) do |form| %>

        <% if @contact.errors.any? %>
          <div class="errors">
            <h2>Form Error:</h2>
            <ul>
              <% @contact.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :full_name, "Full Name", class:"form-label" %><br />
          <%= form.text_field :full_name, autofocus: true, class: "form-control borderedform", placeholder:"Enter your name" %>
        </div>

        <div class="form-group">
          <%= form.label :email, "Email Address", class:"form-label" %><br />
          <%= form.text_field :email, autofocus: true, class: "form-control borderedform", placeholder:"Enter your email" %>
        </div>

        <div class="form-group">
          <%= form.label :phone_number, "Contact Number", class:"form-label" %><br />
          <%= form.text_field :phone_number, autofocus: true, class: "form-control borderedform", placeholder:"Enter your contact phone number (optional)" %>
        </div>

        <div class="form-group">
          <%= form.label :message, "Write Message", class:"form-label" %><br />
          <%= form.text_area :message, autofocus: true, class: "form-control borderedform", rows:"5", placeholder:"Your message" %>
        </div>

        <div class="form-group">
          <%= form.submit "Submit", class: "btn btn-submit" %>
        </div>
      <% end %>
    </div>

    <div class="col-md-6 p-0">
      <div id="map" style="width: 100%; height: 100%; min-height: 500px;"></div>
    </div>
  </div>
</div>

<link href='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css' rel='stylesheet' />


<script>
  document.addEventListener("turbo:load", function () {
    const mapElement = document.getElementById('map');
    if (!mapElement) return;

    mapboxgl.accessToken = 'pk.eyJ1Ijoia2FuYWRvcjI0IiwiYSI6ImNtOGFlYmRmdDBvaDcycXFhMGp0dTNnbnIifQ.5yRITjzyzP175M0-OtChUQ';
    const map = new mapboxgl.Map({
      container: 'map',
      style: 'mapbox://styles/mapbox/streets-v12',
      center: [-73.5949909455256, 45.52633929081981],
      zoom: 15
    });

    new mapboxgl.Marker()
      .setLngLat([-73.5949909455256, 45.52633929081981])
      .addTo(map);
  });
</script>
